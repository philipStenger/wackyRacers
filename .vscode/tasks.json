                "command": "${config:windowsToolchainEnvCmd} && make -j ${config:makeNumJobs} program",
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [ "/d", "/c" ]
                    }
                }
            },
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "BOARD": "${command:cpptools.activeConfigName}"
                }
