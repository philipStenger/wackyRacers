            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "make -j ${config:makeNumJobs} debug",
            "windows": {
                "command": "${config:windowsToolchainEnvCmd} && make -j ${config:makeNumJobs} debug",
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [ "/d", "/c" ]
                    }
                }
            },
            "options": {
