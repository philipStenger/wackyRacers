                    "BOARD": "${command:cpptools.activeConfigName}"
                }
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "windows": {
                "command": "${config:windowsToolchainEnvCmd} && make clean",
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [ "/d", "/c" ]
                    }
                }
            },
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "BOARD": "${command:cpptools.activeConfigName}"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Program",
            "type": "shell",
            "command": "make -j ${config:makeNumJobs} program",
